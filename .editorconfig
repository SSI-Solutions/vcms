# top-most EditorConfig file
root = true

[*]
charset = utf-8
insert_final_newline = true
indent_style = tab
indent_size = 4
continuation_indent_size = 8
tab_width = 4
trim_trailing_whitespace = true
max_line_length = 130

[*.{ts, js}]
continuation_indent_size = 4

[*.json]
max_line_length = 9999

[*.{yaml, yml}]
indent_style = space
indent_size = 2
tab_width = 2
continuation_indent_size = 2
